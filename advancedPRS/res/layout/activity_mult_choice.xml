<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_cup"
    tools:context="com.example.advancedprs.MultChoice"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/essaytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/choose_from_below" >

            <requestFocus />
        </EditText>

        <RadioGroup
            android:id="@+id/multichoicegroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/firstChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="A. Hi!" />

            <RadioButton
                android:id="@+id/secondChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B. You look so cute~" />

            <RadioButton
                android:id="@+id/thirdChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C. My lady!" />

            <RadioButton
                android:id="@+id/fourthChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D. Could you..." />

            <RadioButton
                android:id="@+id/fifthChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E. Do me a favor?" />
        </RadioGroup>

        <Button
            android:id="@+id/submit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>

</FrameLayout>